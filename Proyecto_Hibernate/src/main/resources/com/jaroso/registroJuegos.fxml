<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jaroso.controladores.ControladorRegistroJuegos">
    <children>
        <Pane prefHeight="400.0" prefWidth="600.0">
            <children>
                <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Mostrar">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <TableView fx:id="tablajuego" layoutY="55.0" prefHeight="318.0" prefWidth="600.0">
                                            <columns>
                                                <TableColumn fx:id="idJuego" text="Id" />
                                                <TableColumn fx:id="nombreJuego" text="Nombre" />
                                                <TableColumn fx:id="pegiJuego" text="Pegi" />
                                                <TableColumn fx:id="plataformaJuego" text="Plataforma" />
                                                <TableColumn fx:id="categoriaJuego" text="Categoria" />
                                            </columns>
                                        </TableView>
                                        <Button fx:id="btn_mostrarTodo" layoutX="497.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#MostrarTodos" text="Mostrar Todo" />
                                        <Button fx:id="btn_buscar" layoutX="138.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#MostrarId" text="Buscar" />
                                        <Label layoutX="20.0" layoutY="18.0" text="Id" />
                                        <TextField fx:id="campoIdBuscar" layoutX="40.0" layoutY="14.0" prefHeight="26.0" prefWidth="74.0" />
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Insertar">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="btn_insertar" layoutX="192.0" layoutY="220.0" mnemonicParsing="false" onMouseClicked="#InsertarJuego" text="Insertar" />
                              <Label layoutX="23.0" layoutY="27.0" text="Id" />
                              <Label layoutX="24.0" layoutY="59.0" text="Nombre" />
                              <Label layoutX="20.0" layoutY="100.0" text="Categoria" />
                              <Label layoutX="28.0" layoutY="133.0" text="Plataforma" />
                              <Label layoutX="32.0" layoutY="168.0" text="Pegi" />
                              <TextField fx:id="tf_IdInsertar" layoutX="117.0" layoutY="23.0" />
                              <TextField fx:id="tf_nombreInsertar" layoutX="117.0" layoutY="55.0" />
                              <TextField fx:id="tf_pegiInsertar" layoutX="117.0" layoutY="164.0" />
                              <Text fx:id="t_estadoInsert" layoutX="192.0" layoutY="299.0" strokeType="OUTSIDE" strokeWidth="0.0" text="-----" />
                              <ComboBox fx:id="cbx_categoriaInsertar" layoutX="117.0" layoutY="96.0" prefWidth="150.0" />
                              <ComboBox fx:id="cbx_plataformaInsertar" layoutX="117.0" layoutY="129.0" prefWidth="150.0" />
                           </children></AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Modificar">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                            </content>
                        </Tab>
                        <Tab text="Eliminar">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </Pane>
    </children>
</AnchorPane>
